{
  "name": "redux-promise-counter",
  "version": "1.2.1",
  "description": "Keep track of unresolved promises in Redux Actions. Useful for Server Side Rendering.",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run build:commonjs",
    "test": "jest",
